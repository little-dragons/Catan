{
    "references": [
        {
            "path": "../shared"
        }
    ],
    "ts-node": {
        "esm": true
    },
    "compilerOptions": {
        "composite": true,
        "target": "ESNext",
        "module": "ESNext",
        "lib": [
            "ES2022",
            "DOM",
            "ES2023.Collection",
            "ESNext.Collection",
            "ES2023.Array",
            "ES6"
        ],
        "moduleResolution": "Bundler",
        "outDir": "../dist/server/",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
